{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2015",
    "removeComments": false,
    // "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  }
}
